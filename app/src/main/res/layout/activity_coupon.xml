<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_coupon"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center">

<ImageView
    android:id="@+id/image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerInside"
    android:adjustViewBounds="true"
    android:layout_weight="1"
    android:background="@drawable/just_coupon"
    />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/coutdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dip"
                android:text="20"
                android:textColor="#ffffffff"
                android:id="@+id/textSeconds"
                android:textSize="35sp"
                android:layout_alignBaseline="@+id/textMinutes"
                android:layout_alignBottom="@+id/textMinutes"
                android:layout_toEndOf="@+id/textMinutes"
                android:layout_marginStart="31dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34dp"
                android:padding="0dip"
                android:text="20"
                android:textColor="#ffffffff"
                android:id="@+id/textMinutes"
                android:textSize="35sp"
                android:layout_marginStart="132dp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

